{
    "files.exclude": {
        "**/__pycache__/": true,
        "**/.tmp.driveupload/": true,
    },

    "emeraldwalk.runonsave": {
        "autoClearConsole":true,
        "commands": [
            {
                "match": "src\\\\*",
                "cmd": "echo 'restarting server'"
            },
            {
                "match": "src\\\\*",
                "cmd": ".\\commands\\restart.cmd"
            },
        ]
    }
}